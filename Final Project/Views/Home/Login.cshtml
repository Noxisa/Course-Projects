@page "/login"
@model Final_Project.Views.Home.LoginModel

<h2>Title</h2>

@if (!string.IsNullOrEmpty(Message))
{
    <p class="text-danger">@Message</p>
}

<EditForm Model="this" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <InputText id="email" class="form-control" bind-Value ="Email" required />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <InputText id="password" type="password" class="form-control" bind-Value ="Password" required />
    </div>

    <button type="submit" class="btn btn-primary">Log</button>
</EditForm>

<p class="mt-3">
    Don't have an account? <a href="/signup">Signup</a>
</p>

@code{
    public string Message {get; set;}
	public string Email {get; set;}

    private void HandleLogin()
    {
        if(strong.IsNullOrEmpty(Email) || string.IsNullOrEmpty(Password))

        {
			Message = "Email and password are required.";
        }
        else
        {
			Message = "Login successful.";
        }

    }

}